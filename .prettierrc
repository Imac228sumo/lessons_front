{
	"trailingComma": "es5",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",

	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"/@components/(.*)$",
		"/@layout/(.*)$",
		"/@screens/(.*)$",
		"/@ui/(.*)$",
		"/@hooks/(.*)$",
		"/@shared/(.*)$",
		"/@services/(.*)$",
		"/@assets/(.*)$",
		"/@utils/(.*)$",
		"/@configs/(.*)$",
		"/@store/(.*)$",
		"^../(.*)",
		"^./(.*)",
		"(.scss)$"
	],

	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
